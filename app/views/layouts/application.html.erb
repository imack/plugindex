<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "WP Plugindex: Ranking The Best Wordpress Plugins" %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>

<body class="<%= controller_name %> <%= action_name %>">
<div id="wrap">
  <div id="main">
      <!-- Header starts -->
      <header>
        <div class="container clear-top">
          <div class="row">
            <div class="span4">
              <!-- Logo. Use class "color" to add color to the text. -->
              <div class="logo">
                <h1><a href="#">WP<span class="color bold">plugindex</span></a></h1>
                <p class="meta">The Best and Trending WordPress Plugins</p>
              </div>
            </div>

            <div class="span4"></div>
            <div class="span4" style="padding-top: 15px;">
              <h5>Get Update Notifications on Twitter:</h5>
              <div class="ctas">
                <a href="https://twitter.com/wpplugindex" class="twitter-follow-button" data-show-count="false" data-size="large">Follow @wpplugindex</a>
                <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Seperator -->

      <div class="sep"></div>

      <!-- Header ends -->
      <!-- Page content starts -->

      <div class="content">
        <div class="container">
          <%= render 'layouts/messages' %>
          <%=  yield %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Page content ends -->

<!-- Footer starts -->
<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="span8">
        <!-- Copyright info -->
        <p class="copy" style="margin-top:7px;">Copyright &copy; 2013 | <a href="#">WPPlugindex</a></p>
      </div>
      <div class="span4" style="padding-top: 10px;text-align: right;">
        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://wpplugindex.com" data-via="wpplugindex">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>

    </div>
    <div class="clearfix"></div>
  </div>
</footer>

<!-- Footer ends -->

<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-39157552-1']);
    _gaq.push(['_trackPageview']);

    (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

</script>
</body>
</html>